<%- include('partials/header') %>
<%- include('partials/admin_nav') %>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Podcasts verwalten</h1>
        <a href="/admin/podcasts/new" class="btn btn-primary">Neuen Podcast hinzufügen</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titel</th>
                <th>Veröffentlicht am</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
            <% if (podcasts && podcasts.length > 0) { %>
                <% podcasts.forEach(podcast => { %>
                    <tr>
                        <td><%= podcast.title %></td>
                        <td><%= new Date(podcast.published_at).toLocaleDateString('de-DE') %></td>
                        <td>
                            <a href="/admin/podcasts/edit/<%= podcast.id %>" class="btn btn-sm btn-outline-secondary">Bearbeiten</a>
                            <!-- Delete Button Form -->
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="3" class="text-center">Keine Podcasts gefunden.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>
