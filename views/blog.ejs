<%- include('partials/header') %>

<div class="container my-5">
    <div class="row">
        <div class="col-12 text-center mb-5" data-aos="fade-down">
            <h1>Purview Panda Blog</h1>
            <p class="lead">Wissen und Einblicke in die Welt der Datensicherheit.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <% if (posts && posts.length > 0) { %>
                <% posts.forEach(function(post) { %>
                    <div class="card mb-4" id="post-<%= post.id %>" data-aos="fade-up">
                        <% if (post.featured_image_path) { %>
                            <img src="<%= post.featured_image_path %>" class="card-img-top" alt="<%= post.title %>" style="height: 200px; object-fit: cover;">
                        <% } %>
                        <div class="card-body">
                            <h2 class="card-title"><%= post.title %></h2>
                            <p class="card-subtitle mb-2 text-muted">
                                Veröffentlicht am: <%= new Date(post.createdAt).toLocaleDateString('de-DE') %>
                            </p>
                            <div class="card-text blog-post-content">
                                <% if (post.content) { %>
                                    <%- post.content.replace(/<[^>]*>?/gm, '').substring(0, 250) %>...
                                <% } %>
                            </div>
                            <!-- NEU: Tag-Anzeige -->
                            <% if (post.tags) { %>
                                <div class="mt-3">
                                    <% post.tags.split(',').forEach(function(tag) { const t = tag.trim(); if(!t) return; %>
                                        <a href="/blog/tag/<%= t %>" class="btn btn-sm btn-outline-secondary me-1" data-tag-link="#tag:<%= encodeURIComponent(t) %>"><%= t %></a>
                                    <% }); %>
                                </div>
                            <% } %>
                            <button type="button" class="btn btn-sm btn-outline-primary mt-3 read-more-btn" data-bs-toggle="modal" data-bs-target="#blogPostModal" data-post-id="<%= post.id %>">
                                Ganzen Beitrag lesen
                            </button>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-center text-muted">Aktuell sind keine Beiträge vorhanden.</p>
            <% } %>
        </div>
    </div>
    <% if(typeof page !== 'undefined' && totalPages > 1){ %>
    <nav aria-label="Blog Pagination" class="mt-4">
        <ul class="pagination justify-content-center flex-wrap">
            <li class="page-item <%= page===1 ? 'disabled' : '' %>"><a class="page-link" href="/blog?page=<%= page-1 %>" aria-label="Vorherige">&laquo;</a></li>
            <% for(let p=Math.max(1, page-2); p<=Math.min(totalPages, page+2); p++){ %>
                <li class="page-item <%= p===page ? 'active' : '' %>"><a class="page-link" href="/blog?page=<%= p %>"><%= p %></a></li>
            <% } %>
            <li class="page-item <%= page===totalPages ? 'disabled' : '' %>"><a class="page-link" href="/blog?page=<%= page+1 %>" aria-label="Nächste">&raquo;</a></li>
        </ul>
        <p class="text-center small text-muted">Seite <%= page %> von <%= totalPages %> – <%= total %> Beiträge</p>
    </nav>
    <% } %>
</div>

<%- include('partials/footer') %>
<script>
// Enhance tag buttons: if user is on /blog convert to hash navigation for deep link
(function(){
    if(location.pathname==='/blog'){
        document.querySelectorAll('[data-tag-link]').forEach(a=>{
            a.addEventListener('click', function(ev){
                ev.preventDefault();
                const h=this.getAttribute('data-tag-link');
                location.hash=h; // header script will redirect
                // trigger header logic manually (in case already loaded)
                if(window.__pandaTagRedirect) window.__pandaTagRedirect();
            });
        });
    }
})();
</script>
