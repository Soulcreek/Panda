<!-- Blog Post Modal -->
<div class="modal fade" id="blogPostModal" tabindex="-1" aria-labelledby="blogPostModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="blogPostModalLabel">Beitrag</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <img id="modal-post-image" class="img-fluid rounded mb-3" style="display:none;" alt="Post Bild">
        <div id="modal-post-content" class="mb-3"></div>
        <div id="modal-post-tags" class="small"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schließen</button>
      </div>
    </div>
  </div>
</div>

<!-- Media Library Modal (mit Kategorie-Filter) -->
<div class="modal fade" id="mediaLibraryModal" tabindex="-1" aria-labelledby="mediaLibraryModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="mediaLibraryModalLabel">Medienbibliothek</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="d-flex flex-wrap gap-2 mb-3" id="media-category-filters">
          <button class="btn btn-sm btn-outline-primary active" data-cat="all">Alle</button>
          <button class="btn btn-sm btn-outline-primary" data-cat="Blog-Titelbild">Blog-Titelbild</button>
          <button class="btn btn-sm btn-outline-primary" data-cat="Titelbild">Titelbild</button>
          <button class="btn btn-sm btn-outline-primary" data-cat="Podcast">Podcast</button>
          <button class="btn btn-sm btn-outline-primary" data-cat="Icon">Icon</button>
          <button class="btn btn-sm btn-outline-primary" data-cat="Illustration">Illustration</button>
        </div>
        <div id="media-library-grid"></div>
        <div class="mt-3 gap-2 d-none" id="media-size-options">
          <span class="me-2">Größe:</span>
          <button class="btn btn-sm btn-outline-secondary size-btn" data-size="small" type="button">Klein</button>
          <button class="btn btn-sm btn-outline-secondary size-btn" data-size="medium" type="button">Mittel</button>
          <button class="btn btn-sm btn-outline-secondary size-btn" data-size="original" type="button">Original</button>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schließen</button>
      </div>
    </div>
  </div>
</div>
