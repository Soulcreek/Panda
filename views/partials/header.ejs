<!DOCTYPE html>
<% /* Fallbacks falls Middleware bei Fehlerpfaden nicht lief */
if (typeof t === 'undefined') { var t = function(key){ return key; }; }
if (typeof isAdmin === 'undefined') { var isAdmin = false; }
if (typeof isEditor === 'undefined') { var isEditor = isAdmin; }
if (typeof currentPath === 'undefined') { var currentPath = ''; }
if (typeof locale === 'undefined') { var locale = 'de'; }
var __locale = (typeof locale !== 'undefined' && locale) ? locale : 'de';
%>
<html lang="<%= (typeof locale !== 'undefined' ? locale : 'de') %>" <%= (typeof userPrefs !== 'undefined' && userPrefs && userPrefs.theme==='dark') ? 'class="dark-mode"' : '' %> data-user-prefs="<%= encodeURIComponent(JSON.stringify((typeof userPrefs !== 'undefined' ? userPrefs : null)||null)) %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purview Panda - <%= title %></title>
    <% /* Include aus gleichem Verzeichnis: kein 'partials/' Präfix nötig */ %>
    <%- include('seo_meta') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- CSS für die Animationen -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/util.css"><!-- utilities -->
    <% if (typeof csrfToken !== 'undefined' && csrfToken) { %><meta name="csrf-token" content="<%= csrfToken %>"><% } %>
    <script nonce="<%= cspNonce %>" src="/js/inline/bootstrap_start.js"></script>
</head>
<body>

<% /* (bereits oben definiert) */ %>

<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
    <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                    <img src="/img/logo.png" data-logo-light="/img/logo.png" data-logo-dark="/uploads/1755632270498-Logo_dark.png" alt="Purview Panda" height="48" class="d-inline-block align-text-top" id="siteLogo">
                </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto align-items-lg-center">
                <% const __cp = (typeof currentPath === 'undefined' ? '' : currentPath); %>
                <li class="nav-item"><a class="nav-link <%= __cp === '/blog' ? 'active' : '' %>" href="/blog"><%= t('nav.blog') %></a></li>
                <li class="nav-item"><a class="nav-link <%= __cp === '/pandas-way' ? 'active' : '' %>" href="/pandas-way"><%= t('nav.pandas_way') %></a></li>
                <li class="nav-item"><a class="nav-link <%= __cp.startsWith('/podcasts') ? 'active' : '' %>" href="/podcasts"><%= t('nav.podcasts') %></a></li>
                <li class="nav-item"><a class="nav-link <%= __cp === '/purview' ? 'active' : '' %>" href="/purview" title="<%= t('nav.purview.title') %>" aria-label="<%= t('nav.purview.title') %>"><%= t('nav.purview') %></a></li>
                <li class="nav-item"><a class="nav-link <%= __cp === '/autor' ? 'active' : '' %>" href="/autor"><%= t('nav.author') %></a></li>
                <% if (isEditor) { %>
                    <% if (isAdmin) { %>
                        <li class="nav-item">
                            <a class="nav-link <%= __cp.startsWith('/admin') ? 'text-primary fw-bold' : 'text-secondary' %>" href="/admin"><%= t('nav.admin') %></a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link <%= __cp.startsWith('/editors') ? 'text-primary fw-bold' : 'text-secondary' %>" href="/editors">Editors</a>
                    </li>
                <% } %>
                <li class="nav-item ms-lg-2">
                    <button id="themeToggleBtn" type="button" class="btn btn-sm btn-outline-secondary" aria-label="Toggle theme" aria-pressed="false" title="Dark Mode">
                        <i class="bi bi-moon-stars" id="themeToggleIcon"></i>
                    </button>
                </li>
                                <li class="nav-item ms-lg-3">
                        <form action="/search" method="GET" class="d-flex" role="search" onsubmit="return (this.q.value||'').trim().length>1">
                            <input class="form-control form-control-sm" type="search" placeholder="<%= t('search.placeholder') %>" aria-label="Search" name="q" value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                            <button class="btn btn-sm btn-outline-primary ms-2" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    </li>
                    <li class="nav-item dropdown ms-lg-2">
                        <a class="nav-link dropdown-toggle" href="#" id="langSwitch" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <%= __locale.toUpperCase() %>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="langSwitch">
                            <li><a class="dropdown-item" href="?lang=de">DE</a></li>
                            <li><a class="dropdown-item" href="?lang=en">EN</a></li>
                        </ul>
                    </li>
                    <% if (!isEditor && !isAdmin) { %>
                    <li class="nav-item ms-lg-2">
                        <a class="btn btn-sm btn-outline-success" href="/login"><i class="bi bi-box-arrow-in-right"></i> <%= t('nav.login') || 'Login' %></a>
                    </li>
                    <% } %>
            </ul>
        </div>
    </div>
</nav>
<script nonce="<%= cspNonce %>" src="/js/inline/deeplinks.js"></script>
<script nonce="<%= cspNonce %>" src="/js/inline/logo_swap.js"></script>
<script nonce="<%= cspNonce %>" src="/js/inline/sw_register.js"></script>
<script nonce="<%= cspNonce %>" src="/js/purview-nav.js"></script>
