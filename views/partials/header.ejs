<!DOCTYPE html>
<% /* Fallbacks falls Middleware bei Fehlerpfaden nicht lief */
if (typeof t === 'undefined') { var t = function(key){ return key; }; }
if (typeof isAdmin === 'undefined') { var isAdmin = false; }
if (typeof currentPath === 'undefined') { var currentPath = ''; }
if (typeof locale === 'undefined') { var locale = 'de'; }
var __locale = (typeof locale !== 'undefined' && locale) ? locale : 'de';
%>
<html lang="<%= (typeof locale !== 'undefined' ? locale : 'de') %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purview Panda - <%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- CSS für die Animationen -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <% if (typeof csrfToken !== 'undefined' && csrfToken) { %><meta name="csrf-token" content="<%= csrfToken %>"><% } %>
    <script>
    (function(){
        var meta=document.querySelector('meta[name="csrf-token"]');
        window.CSRF_TOKEN = meta? meta.getAttribute('content') : '';
                // Fallback: alle Admin-POST-Formulare ohne _csrf Feld automatisch ergänzen (verhindert EBADCSRFTOKEN bei vergessenen Formularen)
                document.addEventListener('DOMContentLoaded', function(){
                    try {
                        if(!window.CSRF_TOKEN) return;
                        document.querySelectorAll('form[method="post" i]').forEach(function(f){
                            if(f.querySelector('input[name="_csrf"]')) return;
                            var input=document.createElement('input');
                            input.type='hidden'; input.name='_csrf'; input.value=window.CSRF_TOKEN; f.appendChild(input);
                        });
                        // Patch fetch, damit JSON POSTs automatisch das Token mitsenden sofern kein Header gesetzt ist
                        if(!window.__csrfFetchPatched){
                            const _origFetch = window.fetch;
                            window.fetch = function(url, opts){
                                opts = opts || {}; opts.headers = opts.headers || {};
                                const method = (opts.method||'GET').toUpperCase();
                                if(window.CSRF_TOKEN && method !== 'GET' && method !== 'HEAD' && !('CSRF-Token' in opts.headers) && !('x-csrf-token' in Object.keys(opts.headers).reduce((a,k)=>{a[k.toLowerCase()]=opts.headers[k];return a;},{}))){
                                    opts.headers['CSRF-Token'] = window.CSRF_TOKEN;
                                }
                                return _origFetch(url, opts);
                            };
                            window.__csrfFetchPatched = true;
                        }
                    } catch(e){ console.warn('CSRF Auto Inject Fehler', e); }
                });
    })();
    </script>
</head>
<body>

<% /* (bereits oben definiert) */ %>

<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
    <div class="container">
        <a class="navbar-brand" href="/" style="display:flex;align-items:center;gap:.5rem;">
            <img src="/img/logo.png" alt="Purview Panda" height="48" class="d-inline-block align-text-top" style="height:48px;width:auto;">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto align-items-lg-center">
                <% const __cp = (typeof currentPath === 'undefined' ? '' : currentPath); %>
                <li class="nav-item">
                    <a class="nav-link <%= __cp === '/pandas-way' ? 'active' : '' %>" href="/pandas-way"><%= t('nav.pandas_way') %></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= __cp === '/purview' ? 'active' : '' %>" href="/purview"><%= t('nav.purview') %></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= __cp === '/blog' ? 'active' : '' %>" href="/blog"><%= t('nav.blog') %></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= __cp.startsWith('/podcasts') ? 'active' : '' %>" href="/podcasts"><%= t('nav.podcasts') %></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= __cp === '/autor' ? 'active' : '' %>" href="/autor"><%= t('nav.author') %></a>
                </li>
                <% if (isAdmin) { %>
                    <li class="nav-item">
                        <a class="nav-link <%= isAdmin ? 'text-primary fw-bold' : 'text-secondary' %>" href="/admin"><%= t('nav.admin') %></a>
                    </li>
                <% } %>
                                <li class="nav-item ms-lg-3">
                        <form action="/search" method="GET" class="d-flex" role="search" onsubmit="return (this.q.value||'').trim().length>1">
                            <input class="form-control form-control-sm" type="search" placeholder="<%= t('search.placeholder') %>" aria-label="Search" name="q" value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                            <button class="btn btn-sm btn-outline-primary ms-2" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    </li>
                    <li class="nav-item dropdown ms-lg-2">
                        <a class="nav-link dropdown-toggle" href="#" id="langSwitch" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <%= __locale.toUpperCase() %>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="langSwitch">
                            <li><a class="dropdown-item" href="?lang=de">DE</a></li>
                            <li><a class="dropdown-item" href="?lang=en">EN</a></li>
                        </ul>
                                </li>
            </ul>
        </div>
    </div>
</nav>
<script>
// Tag Deep Link via URL hash: #tag:Security
(function(){
    const hash = decodeURIComponent(location.hash||'');
    if(hash.startsWith('#tag:')){
        const tag = hash.substring(5);
        if(tag){
            // Direkt zur Tag-Seite navigieren falls nicht schon dort
            if(!location.pathname.startsWith('/blog/tag/')){
                location.href = '/blog/tag/' + encodeURIComponent(tag);
            }
        }
    }
})();
</script>
