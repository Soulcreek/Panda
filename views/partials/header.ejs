<script nonce="<%= cspNonce %>">
document.getElementById('siteSearchForm')?.addEventListener('submit', function(e){
    const v=(this.q.value||'').trim();
    if(v.length<=1){ e.preventDefault(); }
});

// Shrinking Navigation on Scroll (class-driven)
const navbar = document.querySelector('.navbar');
const navbarBrand = document.querySelector('.navbar-brand img');
const shrinkables = document.querySelectorAll('.shrinkable');

let lastScrollY = 0;
const shrinkThreshold = 100;

function updateNavbar() {
    const scrollY = window.scrollY;
    if (!navbar) return;

    if (scrollY > shrinkThreshold) {
        navbar.classList.add('navbar--shrink');
    } else {
        navbar.classList.remove('navbar--shrink');
    }

    lastScrollY = scrollY;
}

// Throttled scroll handler
let ticking = false;
window.addEventListener('scroll', () => {
    if (!ticking) {
        requestAnimationFrame(() => {
            updateNavbar();
            ticking = false;
        });
        ticking = true;
    }
});

// initialise once
updateNavbar();
</script>
