    <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                    <img src="/img/logo.png" data-logo-light="/img/logo.png" data-logo-dark="/uploads/1755977555447-Logo_dark-1.png" alt="<%= t('site.title') %>" height="36" class="d-inline-block align-text-top" id="siteLogo">
                </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto align-items-lg-center">
                <% const __cp = (typeof currentPath === 'undefined' ? '' : currentPath); %>
                <li class="nav-item"><a class="nav-link <%= __cp === '/blog' ? 'active' : '' %>" href="<%= localizedUrl('/blog') %>"><%= t('nav.blog') %></a></li>
                <li class="nav-item"><a class="nav-link <%= __cp === '/pandas-way' ? 'active' : '' %>" href="<%= localizedUrl('/pandas-way') %>"><%= t('nav.pandas_way') %></a></li>
                <li class="nav-item"><a class="nav-link <%= __cp.startsWith('/podcasts') ? 'active' : '' %>" href="<%= localizedUrl('/podcasts') %>"><%= t('nav.podcasts') %></a></li>
                <li class="nav-item"><a class="nav-link <%= __cp === '/purview' ? 'active' : '' %>" href="<%= localizedUrl('/purview') %>" title="<%= t('nav.purview.title') %>" aria-label="<%= t('nav.purview.title') %>"><%= t('nav.purview') %></a></li>
                <li class="nav-item"><a class="nav-link <%= __cp === '/autor' ? 'active' : '' %>" href="<%= localizedUrl('/autor') %>"><%= t('nav.author') %></a></li>
                <% if (isEditor) { %>
                    <% if (isAdmin) { %>
                        <li class="nav-item">
                            <a class="nav-link <%= __cp.startsWith('/admin') ? 'text-primary fw-bold' : 'text-secondary' %>" href="/admin"><%= t('nav.admin') %></a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link <%= __cp.startsWith('/editors') ? 'text-primary fw-bold' : 'text-secondary' %>" href="/editors">Editors</a>
                    </li>
                <% } %>
                <li class="nav-item ms-lg-2">
                    <button id="themeToggleBtn" type="button" class="btn btn-sm btn-outline-secondary" aria-label="Toggle theme" aria-pressed="false" title="Dark Mode">
                        <i class="bi bi-moon-stars" id="themeToggleIcon"></i>
                    </button>
                </li>
                                <li class="nav-item ms-lg-3 shrinkable">
                                    <form action="/search" method="GET" class="d-flex" role="search" id="siteSearchForm">
                            <input class="form-control form-control-sm" type="search" placeholder="<%= t('search.placeholder') %>" aria-label="Search" name="q" value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                            <button class="btn btn-sm btn-outline-primary ms-2" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    </li>
                    <li class="nav-item dropdown ms-lg-2">
                        <a class="nav-link dropdown-toggle" href="#" id="langSwitch" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <%= __locale.toUpperCase() %>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="langSwitch">
                            <li><a class="dropdown-item" href="<%= localizedUrl(__cp || '/', 'de') %>">DE</a></li>
                            <li><a class="dropdown-item" href="<%= localizedUrl(__cp || '/', 'en') %>">EN</a></li>
                        </ul>
                    </li>
                    <% if (!isEditor && !isAdmin) { %>
                    <li class="nav-item ms-lg-2 shrinkable">
                        <a class="btn btn-sm btn-outline-success" href="/login"><i class="bi bi-box-arrow-in-right"></i> <%= t('nav.login') || 'Login' %></a>
                    </li>
                    <% } %>
            </ul>
        </div>
    </div>
</nav>
<script nonce="<%= cspNonce %>" src="/js/inline/deeplinks.js"></script>
<script nonce="<%= cspNonce %>" src="/js/inline/logo_swap.js"></script>
<script nonce="<%= cspNonce %>">/* Early theme-toggle ARIA sync: set button state/icon quickly before full script loads */
;(function(){
    try{
        var btn = document.getElementById('themeToggleBtn');
        var icon = document.getElementById('themeToggleIcon');
        if(btn){
            var isDark = document.documentElement.classList.contains('dark-mode');
            btn.setAttribute('aria-pressed', isDark ? 'true' : 'false');
            if(icon){
                if(isDark){ icon.classList.remove('bi-moon-stars'); icon.classList.add('bi-sun'); }
                else { icon.classList.add('bi-moon-stars'); icon.classList.remove('bi-sun'); }
            }
        }
    }catch(e){ /* silent */ }
})();</script>
