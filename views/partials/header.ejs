<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
    <div class="container">
        <a class="navbar-brand" href="/">
            <img src="/img/logo.png" alt="Purview Panda Logo" height="30" class="d-inline-block align-text-top">
            Purview Panda
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link <%= currentPath === '/pandas-way' ? 'active' : '' %>" href="/pandas-way">Panda's Way</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= currentPath === '/purview' ? 'active' : '' %>" href="/purview">Purview</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= currentPath === '/blog' ? 'active' : '' %>" href="/blog">Blog</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= currentPath === '/podcasts' ? 'active' : '' %>" href="/podcasts">Podcasts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= currentPath === '/autor' ? 'active' : '' %>" href="/autor">Autor</a>
                </li>
                <% if (isAdmin) { %>
                    <li class="nav-item">
                        <a class="nav-link text-primary fw-bold" href="/admin">Admin</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
