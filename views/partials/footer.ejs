<!-- Bootstrap Modal für die globale Einzelansicht der Blog-Posts -->
<div class="modal fade" id="blogPostModal" tabindex="-1" aria-labelledby="blogPostModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="blogPostModalLabel">Blog Post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <img src="" id="modal-post-image" class="img-fluid mb-3 rounded" alt="Titelbild" style="display:none; height: 250px; width:100%; object-fit: cover;">
        <div id="modal-post-content"></div>
        <hr>
        <div id="modal-post-tags" class="mt-3">
            <!-- Tags werden hier per JavaScript eingefügt -->
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap Modal für die Medienbibliothek-Auswahl -->
<div class="modal fade" id="mediaLibraryModal" tabindex="-1" aria-labelledby="mediaLibraryModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="mediaLibraryModalLabel">Aus Medienbibliothek auswählen</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="media-library-grid">
        <div class="text-center">
            <div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div>
        </div>
      </div>
      <div class="modal-footer justify-content-start" id="media-size-options" style="display: none;">
          <small class="me-3">Größe einfügen:</small>
          <button class="btn btn-sm btn-outline-secondary size-btn" data-size="small">Klein (300px)</button>
          <button class="btn btn-sm btn-outline-secondary size-btn" data-size="medium">Mittel (600px)</button>
          <button class="btn btn-sm btn-outline-secondary size-btn" data-size="full">Vollständige Größe</button>
      </div>
    </div>
  </div>
</div>


