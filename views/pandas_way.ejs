<%- include('partials/header') %>

<div class="container my-5">
    <div class="row text-center mb-5">
        <div class="col-12" data-aos="fade-up">
            <h1 class="display-4">Panda's Way</h1>
            <p class="lead text-muted">Ein schrittweiser Weg zu umfassender Datensicherheit.</p>
        </div>
    </div>

    <% if (levels && levels.length > 0) { %>
        <div class="row">
            <!-- Tab Navigation an der Seite -->
            <div class="col-md-3">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <% levels.forEach((level, index) => { %>
                        <button class="nav-link text-start <%= index === 0 ? 'active' : '' %>" id="v-pills-level<%= level.id %>-tab" data-bs-toggle="pill" data-bs-target="#v-pills-level<%= level.id %>" type="button" role="tab">
                            <%= level.title || `Level ${level.display_order}` %>
                        </button>
                    <% }) %>
                </div>
            </div>

            <!-- Inhalte der Tabs -->
            <div class="col-md-9">
                <div class="tab-content" id="v-pills-tabContent">
                    <% levels.forEach((level, index) => { %>
                        <div class="tab-pane fade <%= index === 0 ? 'show active' : '' %>" id="v-pills-level<%= level.id %>" role="tabpanel">
                            <%- level.content %>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    <% } else { %>
        <!-- Fallback-Nachricht, falls keine Inhalte in der DB sind -->
        <div class="row">
            <div class="col-12 text-center">
                <p>Die Inhalte für Panda's Way werden in Kürze verfügbar sein.</p>
            </div>
        </div>
    <% } %>

</div>

<%- include('partials/footer') %>
