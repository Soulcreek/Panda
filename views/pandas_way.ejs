        </div>
    </div>

    <!-- Inhalts-Container -->
    <div id="level-content-container">
    <% if (levels && levels.length > 0) { %>
        <% levels.forEach(function(level) { %>
            <div class="level-content" id="level-<%= level.level %>" style="<%= level.level !== 2 ? 'display: none;' : '' %>">
                <%- level.content %>
            </div>
        <% }); %>
    <% } else { %>
