<%- include('partials/header') %>
<%- include('partials/admin_nav') %>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Medienbibliothek</h1>
    </div>

    <!-- Upload-Formular -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Neue Datei(en) hochladen</h5>
                <form action="/admin/upload" method="post" enctype="multipart/form-data" id="media-upload-form">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Datei(en)</label>
                            <input type="file" id="mediaFiles" name="mediaFiles" class="form-control" multiple required accept="image/*,audio/*">
                            <div class="form-text">Bilder oder Audio (MP3, WAV, OGG). Mehrfachauswahl möglich. Automatische ALT/SEO nur bei 1 Bild aktiv.</div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Kategorie</label>
                            <select class="form-select" name="category" id="mediaCategory">
                                <option value="">(optional)</option>
                                <option>Icon</option>
                                <option>Banner</option>
                                <option>Titelbild</option>
                                <option>Illustration</option>
                                <option>Logo</option>
                                <option>Feature</option>
                                <option>Audio</option>
                                <option>Sonstiges</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label d-flex justify-content-between align-items-center">SEO / ALT
                                <button type="button" id="generate-alt-text-btn" class="btn btn-sm btn-outline-secondary" disabled>
                                    <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                                    Auto
                                </button>
                            </label>
                            <input type="text" class="form-control" id="altText" name="alt_text" placeholder="Alternativtext">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Beschreibung</label>
                            <textarea class="form-control" name="description" id="mediaDescription" rows="2" placeholder="Kurzbeschreibung (optional)"></textarea>
                        </div>
                        <div class="col-12 d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Hochladen</button>
                            <button type="reset" class="btn btn-outline-secondary">Zurücksetzen</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    <!-- Medien-Raster -->
        <div class="mb-3 d-flex flex-wrap gap-2 align-items-center">
            <div class="btn-group btn-group-sm" role="group" aria-label="Kategorie Filter" id="media-category-filters">
                <button class="btn btn-outline-secondary active" data-cat="all">Alle</button>
                <button class="btn btn-outline-secondary" data-cat="Icon">Icon</button>
                <button class="btn btn-outline-secondary" data-cat="Banner">Banner</button>
                <button class="btn btn-outline-secondary" data-cat="Illustration">Illustration</button>
                <button class="btn btn-outline-secondary" data-cat="Logo">Logo</button>
                <button class="btn btn-outline-secondary" data-cat="Feature">Feature</button>
                <button class="btn btn-outline-secondary" data-cat="Audio">Audio</button>
                <button class="btn btn-outline-secondary" data-cat="Sonstiges">Sonstiges</button>
            </div>
            <div class="btn-group btn-group-sm ms-auto" id="media-type-filter">
                <button class="btn btn-outline-primary active" data-type="all">Alle Typen</button>
                <button class="btn btn-outline-primary" data-type="image">Bilder</button>
                <button class="btn btn-outline-primary" data-type="audio">Audio</button>
            </div>
        </div>
        <div class="row row-cols-2 row-cols-md-4 row-cols-lg-6 g-3" id="media-grid">
            <% if (files && files.length > 0) { %>
                <% files.forEach(file => { %>
                    <div class="col media-grid-item" data-category="<%= file.category || '' %>">
                        <div class="card h-100">
                            <a href="/admin/media/edit/<%= file.id %>" class="text-decoration-none text-dark">
                                <% if (file.type && file.type.startsWith('image/')) { %>
                                    <img src="/uploads/<%= file.name %>" class="card-img-top" alt="<%= file.name %>" style="aspect-ratio:1/1;object-fit:cover;">
                                <% } else if (file.type && file.type.startsWith('audio/')) { %>
                                    <div class="d-flex flex-column justify-content-center align-items-center bg-dark text-white" style="aspect-ratio:1/1;">
                                        <i class="bi bi-music-note-beamed" style="font-size:2rem;"></i>
                                        <small>Audio</small>
                                    </div>
                                <% } else { %>
                                    <div class="d-flex justify-content-center align-items-center bg-light" style="aspect-ratio:1/1;">
                                        <i class="bi bi-file-earmark-text" style="font-size:2rem;"></i>
                                    </div>
                                <% } %>
                                <div class="card-body p-2">
                                    <p class="card-text small text-truncate mb-1"><%= file.name %></p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <% if (file.category) { %><span class="badge bg-secondary small"><%= file.category %></span><% } else { %><span></span><% } %>
                                        <button type="button" class="btn btn-sm btn-outline-secondary copy-media-link-btn" data-link="/uploads/<%= file.name %>">Link</button>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>Keine Dateien in der Medienbibliothek gefunden.</p>
            <% } %>
        </div>
</div>

<%- include('partials/footer') %>
