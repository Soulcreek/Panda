<%- include('partials/header') %>
<div class="container my-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <!-- Navigation Breadcrumb -->
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/purview">Purview Knowledge Center</a></li>
          <li class="breadcrumb-item active" aria-current="page">Glossary</li>
        </ol>
      </nav>

      <!-- Header -->
      <div class="text-center mb-5">
        <h1 class="display-5">Data Governance Glossary</h1>
        <p class="lead text-muted">Key terms and concepts in Microsoft Purview and data governance</p>
      </div>

      <!-- Quick Navigation -->
      <div class="card mb-4">
        <div class="card-body">
          <h6 class="card-title">Quick Navigation</h6>
          <div class="row">
            <div class="col-md-2">
              <a href="#A" class="btn btn-sm btn-outline-secondary">A</a>
            </div>
            <div class="col-md-2">
              <a href="#C" class="btn btn-sm btn-outline-secondary">C</a>
            </div>
            <div class="col-md-2">
              <a href="#D" class="btn btn-sm btn-outline-secondary">D</a>
            </div>
            <div class="col-md-2">
              <a href="#G" class="btn btn-sm btn-outline-secondary">G</a>
            </div>
            <div class="col-md-2">
              <a href="#L" class="btn btn-sm btn-outline-secondary">L</a>
            </div>
            <div class="col-md-2">
              <a href="#S" class="btn btn-sm btn-outline-secondary">S</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Glossary Terms -->
      <div class="row">
        <div class="col-12">
          <!-- A Section -->
          <h3 id="A" class="border-bottom border-primary pb-2 mb-4">A</h3>
          <div class="mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Asset</h5>
                <p class="card-text">
                  Any data source, file, database, or content item that can be cataloged and governed. 
                  In our system, this includes blog posts, media files, podcast episodes, and user-generated content.
                </p>
                <small class="text-muted"><strong>Our implementation:</strong> Tracked via media table, posts table, and content metadata</small>
              </div>
            </div>
          </div>

          <div class="mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Audit Trail</h5>
                <p class="card-text">
                  A chronological record of system activities, user actions, and data changes. 
                  Essential for compliance and understanding who did what, when.
                </p>
                <small class="text-muted"><strong>Our implementation:</strong> Database activity logs, admin action logs, content modification history</small>
              </div>
            </div>
          </div>

          <!-- C Section -->
          <h3 id="C" class="border-bottom border-primary pb-2 mb-4 mt-5">C</h3>
          <div class="mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Classification</h5>
                <p class="card-text">
                  The process of identifying and labeling data based on its type, sensitivity, 
                  and business value. Helps determine appropriate handling and access controls.
                </p>
                <small class="text-muted"><strong>Our implementation:</strong> Content tags, media categories, user permission levels</small>
              </div>
            </div>
          </div>

          <div class="mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Compliance</h5>
                <p class="card-text">
                  Adherence to regulatory requirements, organizational policies, and industry standards. 
                  Includes data protection, retention policies, and access controls.
                </p>
                <small class="text-muted"><strong>Our implementation:</strong> GDPR compliance features, content retention policies, secure authentication</small>
              </div>
            </div>
          </div>

          <!-- D Section -->
          <h3 id="D" class="border-bottom border-primary pb-2 mb-4 mt-5">D</h3>
          <div class="mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Data Catalog</h5>
                <p class="card-text">
                  A centralized inventory of all data assets in an organization. 
                  Includes metadata, descriptions, ownership, and usage information.
                </p>
                <small class="text-muted"><strong>Our implementation:</strong> Admin Tools provide catalog views of posts, media, and system data</small>
              </div>
            </div>
          </div>

          <div class="mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Data Lineage</h5>
                <p class="card-text">
                  The journey of data from its origin through various transformations to its final destination. 
                  Shows how data moves and changes over time.
                </p>
                <small class="text-muted"><strong>Our implementation:</strong> Content workflow from draft → review → publish, media upload and usage tracking</small>
              </div>
            </div>
          </div>

          <!-- G Section -->
          <h3 id="G" class="border-bottom border-primary pb-2 mb-4 mt-5">G</h3>
          <div class="mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Governance</h5>
                <p class="card-text">
                  The overall management of data availability, usability, integrity, and security. 
                  Includes policies, procedures, and controls for data handling.
                </p>
                <small class="text-muted"><strong>Our implementation:</strong> User roles and permissions, content approval workflows, backup and recovery procedures</small>
              </div>
            </div>
          </div>

          <!-- L Section -->
          <h3 id="L" class="border-bottom border-primary pb-2 mb-4 mt-5">L</h3>
          <div class="mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Lineage</h5>
                <p class="card-text">
                  See "Data Lineage" above. The path that data takes from source to destination, 
                  including all transformations and intermediate stops.
                </p>
                <small class="text-muted"><strong>Our implementation:</strong> Tracked through content creation timestamps, edit history, publication workflow</small>
              </div>
            </div>
          </div>

          <!-- S Section -->
          <h3 id="S" class="border-bottom border-primary pb-2 mb-4 mt-5">S</h3>
          <div class="mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Sensitivity Labels</h5>
                <p class="card-text">
                  Tags that indicate the confidentiality and handling requirements of data. 
                  Common labels include Public, Internal, Confidential, and Restricted.
                </p>
                <small class="text-muted"><strong>Our implementation:</strong> Content visibility settings, user access levels, media privacy controls</small>
              </div>
            </div>
          </div>

          <div class="mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Stewardship</h5>
                <p class="card-text">
                  The responsibility for ensuring data quality, proper usage, and compliance with governance policies. 
                  Data stewards are accountable for specific data domains.
                </p>
                <small class="text-muted"><strong>Our implementation:</strong> Content editors and administrators serve as data stewards for their respective areas</small>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Resources -->
      <div class="mt-5">
        <div class="card bg-light">
          <div class="card-body">
            <h5 class="card-title">Additional Resources</h5>
            <div class="row">
              <div class="col-md-6">
                <ul class="list-unstyled">
                  <li><a href="/purview" class="text-decoration-none">← Back to Purview Overview</a></li>
                  <li><a href="/purview/faq" class="text-decoration-none">Frequently Asked Questions</a></li>
                </ul>
              </div>
              <div class="col-md-6">
                <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                  <ul class="list-unstyled">
                    <li><a href="/admin/tools" class="text-decoration-none">Admin Tools & Diagnostics</a></li>
                    <li><a href="/admin" class="text-decoration-none">Admin Dashboard</a></li>
                  </ul>
                <% } else { %>
                  <p class="text-muted mb-0">
                    <small>Contact your administrator for access to diagnostic tools and advanced features.</small>
                  </p>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Smooth scrolling for anchor links -->
  <script nonce="<%= cspNonce %>">
    document.addEventListener('DOMContentLoaded', function() {
      // Smooth scrolling for anchor links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });

      // Highlight current section in navigation
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const id = entry.target.id;
            document.querySelectorAll('.btn-outline-secondary').forEach(btn => {
              btn.classList.remove('active');
            });
            const activeBtn = document.querySelector(`a[href="#${id}"]`);
            if (activeBtn) {
              activeBtn.classList.add('active');
            }
          }
        });
      }, { rootMargin: '-20% 0px -80% 0px' });

      // Observe all section headers
      document.querySelectorAll('h3[id]').forEach(section => {
        observer.observe(section);
      });
    });
  </script>
</div>
<%- include('partials/footer') %>
