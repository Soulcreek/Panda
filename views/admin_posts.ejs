<%- include('partials/header') %>
<%- include('partials/admin_nav') %>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <div class="d-flex align-items-center gap-3">
            <h1 class="mb-0"><%= archived ? 'Archivierte BeitrÃ¤ge' : 'BeitrÃ¤ge verwalten' %></h1>
            <% if (!archived) { %>
                <a href="/admin/posts?archived=1" class="btn btn-sm btn-outline-secondary">Archiv anzeigen</a>
            <% } else { %>
                <a href="/admin/posts" class="btn btn-sm btn-outline-secondary">ZurÃ¼ck</a>
            <% } %>
        </div>
        <div class="d-flex align-items-center gap-2">
            <a href="/admin/posts/new" class="btn btn-primary">Neuen Beitrag erstellen</a>
            <% if (!archived) { %>
            <form action="/admin/posts/sample" method="POST" class="d-inline" onsubmit="return confirm('Beispiel-Posts hinzufÃ¼gen?')">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-outline-primary" type="submit">Beispiel-Posts</button>
            </form>
            <% } %>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>Titel</th>
                        <th>Status</th>
                        <th>Featured</th>
                        <th>Plan / Aktualisiert</th>
                        <th>AI</th>
                        <th>Aktionen</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (posts && posts.length > 0) { %>
                        <% posts.forEach(post => { %>
                            <tr class="<%= post.is_featured ? 'table-warning' : '' %>">
                                <td><%= post.title %></td>
                                <td>
                                    <% if (post.status === 'published') { %>
                                        <% if (post.published_at && new Date(post.published_at) > new Date()) { %>
                                            <span class="badge bg-info text-dark" title="Geplant">Geplant</span>
                                        <% } else { %>
                                            <span class="badge bg-success">Live</span>
                                        <% } %>
                                    <% } else { %>
                                        <span class="badge bg-secondary">Entwurf</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (post.is_featured) { %>
                                        <span class="badge bg-warning text-dark">Featured</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (post.published_at) { %>
                                        <div class="small" title="Geplanter/effektiver Zeitpunkt">ðŸ—“ <%= new Date(post.published_at).toLocaleString('de-DE') %></div>
                                    <% } %>
                                    <div class="text-muted small" title="Zuletzt aktualisiert">âŸ³ <%= new Date(post.updated_at).toLocaleDateString('de-DE') %></div>
                                </td>
                                <td>
                                    <form action="/admin/posts/<%= post.id %>/ai-metadata" method="POST" class="d-inline">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn btn-sm btn-outline-primary" title="AI SEO/Tags">AI</button>
                                    </form>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <% if (!archived) { %>
                                            <a href="/admin/posts/edit/<%= post.id %>" class="btn btn-outline-secondary" title="Bearbeiten">Edit</a>
                                            <% if (post.status === 'published') { %>
                                                <form action="/admin/posts/<%= post.id %>/draft" method="POST" class="d-inline">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <button class="btn btn-outline-secondary" title="Als Entwurf" onclick="return confirm('Auf Entwurf setzen?')">Unpublish</button>
                                                </form>
                                            <% } else { %>
                                                <form action="/admin/posts/<%= post.id %>/publish" method="POST" class="d-inline">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <button class="btn btn-outline-success" title="VerÃ¶ffentlichen">Publish</button>
                                                </form>
                                            <% } %>
                                            <form action="/admin/posts/<%= post.id %>/focus" method="POST" class="d-inline">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <button class="btn btn-outline-warning" title="Featured umschalten"><%= post.is_featured ? 'Unfeature' : 'Feature' %></button>
                                            </form>
                                            <form action="/admin/posts/<%= post.id %>/hide" method="POST" class="d-inline">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <button class="btn btn-outline-danger" title="Ausblenden" onclick="return confirm('Beitrag ausblenden? (Soft Delete)')">Hide</button>
                                            </form>
                                        <% } else { %>
                                            <form action="/admin/posts/<%= post.id %>/restore" method="POST" class="d-inline">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <button class="btn btn-outline-success" title="Wiederherstellen">Restore</button>
                                            </form>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center">Keine BeitrÃ¤ge gefunden.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
