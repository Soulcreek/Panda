<%- include('partials/header') %>
<%- include('partials/admin_nav') %>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Beiträge verwalten</h1>
        <a href="/admin/posts/new" class="btn btn-primary">Neuen Beitrag erstellen</a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>Titel</th>
                        <th>Status</th>
                        <th>Zuletzt aktualisiert</th>
                        <th>Aktionen</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (posts && posts.length > 0) { %>
                        <% posts.forEach(post => { %>
                            <tr>
                                <td><%= post.title %></td>
                                <td>
                                    <% if (post.status === 'published') { %>
                                        <span class="badge bg-success">Veröffentlicht</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">Entwurf</span>
                                    <% } %>
                                </td>
                                <td><%= new Date(post.updated_at).toLocaleDateString('de-DE') %></td>
                                <td>
                                    <a href="/admin/posts/edit/<%= post.id %>" class="btn btn-sm btn-outline-secondary">Bearbeiten</a>
                                    <!-- Hier könnte ein Löschen-Button hin -->
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center">Keine Beiträge gefunden.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
