<%- include('partials/header') %>
<%- include('partials/admin_nav') %> <!-- NEU: Admin-Navigation wird hier eingebunden -->

<div class="container admin-dashboard my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-5 mb-4">Admin Dashboard</h1>
        </div>
    </div>

    <!-- Statistik-Karten -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Blog-Beitr채ge</h5>
                    <p class="card-text display-4"><%= postCount %></p>
                    <a href="/admin/posts" class="btn btn-primary">Verwalten</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Mediendateien</h5>
                    <p class="card-text display-4"><%= mediaCount %></p>
                    <a href="/admin/media" class="btn btn-primary">Verwalten</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Podcasts</h5>
                    <p class="card-text display-4"><%= podcastCount %></p>
                    <a href="/admin/podcasts" class="btn btn-primary">Verwalten</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Letzte Beitr채ge -->
    <div class="row mt-4">
        <div class="col-12">
            <h3>Zuletzt bearbeitete Beitr채ge</h3>
            <% if (latestPosts && latestPosts.length > 0) { %>
                <ul class="list-group">
                    <% latestPosts.forEach(function(post) { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <%= post.title %>
                            <a href="/admin/posts/edit/<%= post.id %>" class="btn btn-sm btn-outline-secondary">Bearbeiten</a>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>Noch keine Beitr채ge erstellt.</p>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
