<%- include('partials/header') %>
<div class="container">
    <div class="login-container" style="max-width: 400px; margin: 40px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px;">
        <h2>Registrieren</h2>
        <p>Erstelle den ersten Administrator-Account.</p>
        <% if (error) { %>
            <p style="color: red;"><%= error %></p>
        <% } %>
        <form action="/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group" style="margin-bottom: 15px;">
                <label for="username">Benutzername</label>
                <input type="text" id="username" name="username" required style="width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ccc;">
            </div>
            <div class="form-group" style="margin-bottom: 15px;">
                <label for="password">Passwort</label>
                <input type="password" id="password" name="password" required style="width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ccc;">
            </div>
            <button type="submit" class="btn" style="width: 100%; padding: 10px; border: none; background-color: #007bff; color: white; border-radius: 4px; cursor: pointer;">Registrieren</button>
        </form>
    </div>
</div>
<%- include('partials/footer') %>
