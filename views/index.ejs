<%- include('partials/header') %>

<header class="hero-section">
    <div class="container" data-aos="fade-up">
        <h1 class="display-3">Purview Panda</h1>
    <p class="lead"><%= t('home.hero.tagline') %></p>
    <a href="/blog" class="btn btn-primary btn-lg mt-3"><%= t('home.hero.cta_blog') %></a>
    </div>
</header>

<!-- Featured Post Sektion -->
<% if (featuredPost) { %>
<div class="container my-5">
    <div class="card mb-3 shadow-lg border-0" data-aos="fade-up">
        <div class="row g-0">
            <div class="col-md-6">
                <% if (featuredPost.featured_image_path) { %>
                <img src="<%= featuredPost.featured_image_path %>" class="img-fluid rounded-start" alt="<%= featuredPost.title %>" style="object-fit: cover; height: 100%;">
                <% } %>
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <div class="card-body p-5">
                    <h5 class="text-muted">Im Fokus</h5>
                    <h2 class="card-title display-6"><%= featuredPost.title %></h2>
                    <p class="card-text mt-3">
                        <% if (featuredPost.content) { %>
                            <%= featuredPost.content.replace(/<[^>]*>?/gm, '').substring(0, 200) %>...
                        <% } %>
                    </p>
                    <button type="button" class="btn btn-primary mt-3 read-more-btn" data-bs-toggle="modal" data-bs-target="#blogPostModal" data-post-id="<%= featuredPost.id %>">
                        Ganzen Beitrag lesen
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<% } %>

<div class="bg-light dark-mode-alt-surface py-5">
    <div class="container">
        <div class="row text-center mb-5" data-aos="fade-up">
            <div class="col-lg-8 mx-auto">
                <h2 class="mb-3"><%= t('home.latest_posts.heading') %></h2>
            </div>
        </div>
        <div class="row g-4">
             <% if (latestPosts && latestPosts.length > 0) { %>
                <% latestPosts.forEach(function(post) { %>
                    <div class="col-md-4" data-aos="zoom-in-up">
                        <div class="card h-100 shadow-sm card-blog">
                            <% if (post.featured_image_path) { %>
                                <img src="<%= post.featured_image_path %>" class="card-img-top" alt="<%= post.title %>" style="height: 180px; object-fit: cover;">
                            <% } %>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= post.title %></h5>
                                <p class="card-text text-muted flex-grow-1">
                                    <% if (post.content) { %>
                                        <%= post.content.replace(/<[^>]*>?/gm, '').substring(0, 100) %>...
                                    <% } %>
                                </p>
                                <button type="button" class="btn btn-sm btn-outline-primary mt-auto read-more-btn" data-bs-toggle="modal" data-bs-target="#blogPostModal" data-post-id="<%= post.id %>">
                                    <%= t('home.latest_posts.read_more') %>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-center text-muted"><%= t('home.latest_posts.none') %></p>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
