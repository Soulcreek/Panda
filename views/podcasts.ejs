<%- include('partials/header') %>

<div class="container my-5">
    <div class="row">
        <div class="col-12 text-center mb-5" data-aos="fade-down">
            <h1 class="mb-1">Podcast</h1>
            <p class="text-muted">Episoden zum Anhören.</p>
            <div class="d-flex flex-wrap gap-2 justify-content-center mt-2">
                <a href="/podcast.rss" class="btn btn-sm btn-outline-primary" title="RSS Feed" rel="alternate"><i class="bi bi-rss"></i> RSS</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <% if (podcasts && podcasts.length > 0) { %>
                <% podcasts.forEach(function(podcast) { %>
                    <div class="podcast-item mb-5" data-aos="fade-up" id="episode-<%= podcast.id %>">
                        <h3 class="h4"><a href="/podcasts/<%= podcast.slug || podcast.id %>"><%= podcast.title %></a></h3>
                        <p class="text-muted mb-2"><%= podcast.description %></p>
                        <div class="ratio ratio-16x9 bg-dark rounded d-flex align-items-center justify-content-center position-relative mb-2 lazy-audio" data-audio="<%= podcast.audio_url %>">
                            <button class="btn btn-light play-lazy" aria-label="Play Episode"><i class="bi bi-play-fill"></i> Abspielen</button>
                        </div>
                        <div class="d-flex flex-wrap gap-3 small align-items-center">
                            <a href="<%= podcast.audio_url %>" download class="text-decoration-none"><i class="bi bi-download"></i> Download</a>
                            <a href="/podcasts/<%= podcast.slug || podcast.id %>#transkript" class="text-decoration-none"><i class="bi bi-text-paragraph"></i> Transkript (bald)</a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="text-center text-muted" data-aos="fade-up">
                    <p>Momentan sind keine Podcasts verfügbar. Schauen Sie bald wieder vorbei!</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<button id="backToTop" class="btn btn-primary position-fixed bottom-15 right-15 z-999 hidden-init"><i class="bi bi-arrow-up"></i></button>
<script nonce="<%= cspNonce %>">
// Lazy Audio Loader
document.addEventListener('DOMContentLoaded', ()=>{
    const blocks=document.querySelectorAll('.lazy-audio');
    blocks.forEach(block=>{
        block.querySelector('.play-lazy')?.addEventListener('click',()=>{
            if(block.dataset.loaded) return; block.dataset.loaded='1';
            const src = block.getAttribute('data-audio');
            const audio=document.createElement('audio'); audio.controls=true; audio.preload='none'; audio.className='w-100 h-100';
            const s=document.createElement('source'); s.src=src; s.type='audio/mpeg'; audio.appendChild(s); block.innerHTML=''; block.appendChild(audio); audio.play().catch(()=>{});
        });
    });
    // Back to top
    const btn=document.getElementById('backToTop');
    window.addEventListener('scroll',()=>{ if(window.scrollY>300) btn.style.display='block'; else btn.style.display='none'; });
    btn.addEventListener('click',()=>{ window.scrollTo({top:0, behavior:'smooth'}); });
});
</script>

<%- include('partials/footer') %>
