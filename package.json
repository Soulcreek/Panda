{
  "name": "panda-project",
  "version": "1.0.0",
  "description": "A content management system built with Node.js and Express.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "deploy-test": "node AUTO-DEPLOY-MK/mk_deploy-cli.js --dry-run --project web --target production --parts default",
    "deploy-live": "node AUTO-DEPLOY-MK/mk_deploy-cli.js --project web --target production --parts default",
    "deploy-local": "node AUTO-DEPLOY-MK/mk_deploy-cli.js --project web --target local --parts default",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "regen-thumbs": "node ./scripts/regenerate_thumbnails.js",
    "watch-thumbs": "node ./scripts/watch_thumbnails.js",
    "diag:http": "node ./scripts/admin_http_diag.js --host=$env:APP_HOST_URL --outDir=tmp",
    "diag:db": "node ./scripts/check_db_privs.js",
    "migrate": "node ./scripts/run_migrations.js",
    "optimize": "node ./scripts/optimize_assets.js"
  },
  "keywords": [
    "cms",
    "blog",
    "nodejs",
    "express"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "basic-ftp": "^5.0.5",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "commander": "^14.0.0",
    "csurf": "^1.11.0",
    "dompurify": "^3.1.6",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-mysql-session": "^3.0.3",
    "express-session": "^1.18.0",
    "fast-glob": "^3.3.3",
    "image-size": "^1.1.1",
    "js-yaml": "^4.1.0",
    "jsdom": "^24.0.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.10.0",
    "node-fetch": "^2.7.0"
  },
  "optionalDependencies": {
    "sharp": "^0.32.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  }
}
