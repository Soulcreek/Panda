# Purview Panda Deployment Configuration
# Projektspezifische Einstellungen f√ºr FTP-Deployment

# PROJECT CONFIGURATION
PROJECT_NAME=purview-panda
DOMAIN_URL=https://purviewpanda.de
BUILD_DIRECTORY=httpdocs
ADMIN_DIRECTORY=admin

# FTP CONFIGURATION (Primary deployment method)
FTP_HOST=ftp.purviewpanda.de
FTP_USER=k302164_pp
FTP_PASSWORD=hallo.4PPFTP
FTP_REMOTE_PATH=/httpdocs

# DEPLOYMENT MODES - Configure what to deploy
DEPLOY_PUBLIC=true      # httpdocs/, routes/public/, views/public/
DEPLOY_EDITORS=true     # routes/editors/, views/editors/
DEPLOY_ADMIN=true       # routes/admin/, views/admin/
DEPLOY_SHARED=true      # lib/, locales/, css/, js/, uploads/
DEPLOY_SERVER=true      # server.js, package.json, etc.

# DEPLOYMENT PATHS - Ordnerstruktur passend zum Webhosting
LOCAL_PUBLIC_PATH=httpdocs
LOCAL_ROUTES_PATH=routes
LOCAL_VIEWS_PATH=views
LOCAL_LIB_PATH=lib
LOCAL_LOCALES_PATH=locales
LOCAL_SERVER_FILES=server.js,package.json,db.js,i18n.js

# REMOTE PATHS - Identisch zur lokalen Struktur
REMOTE_PUBLIC_PATH=/httpdocs
REMOTE_ROUTES_PATH=/routes
REMOTE_VIEWS_PATH=/views
REMOTE_LIB_PATH=/lib
REMOTE_LOCALES_PATH=/locales
REMOTE_SERVER_PATH=/

# NODE.JS DEPLOYMENT SETTINGS
NODE_DEPLOYMENT=true
PM2_APP_NAME=purview-panda
RESTART_AFTER_DEPLOY=true
RUN_MIGRATIONS=true

# ADMIN CREDENTIALS (Change after first deployment!)
ADMIN_DEFAULT_USER=admin
ADMIN_DEFAULT_PASS=change-me-secure-123

# DATABASE CONFIGURATION
DB_HOST=localhost
